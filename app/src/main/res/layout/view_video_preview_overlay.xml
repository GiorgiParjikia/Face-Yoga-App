<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/previewOverlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <!-- Затемнение всего экрана -->
    <View
        android:id="@+id/dim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка с видео -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/videoCard"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/video_background"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Фон + видео -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/video_background">

            <!-- Media3 PlayerView -->
            <androidx.media3.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:use_controller="false"
                app:resize_mode="fit"
                android:keepScreenOn="false" />

            <!-- Индикатор загрузки -->
            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/text_on_dark"
                android:visibility="gone" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
